<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xmlns:context="http://www.springframework.org/schema/context"
		xmlns:p="http://www.springframework.org/schema/p"
		xsi:schemaLocation="http://www.springframework.org/schema/beans
							http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
							http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">


	
	

	<!-- The MBean controlling the data stores -->
	<bean id="dataStoreManager" class="com.truvo.getdrunk.elasticsearch.index.management.DataStoreManagerImpl">
		<constructor-arg name="bulkImporter" ref="businessIndexer"/>
		<constructor-arg name="host" value="${searchengine.host}"/>
	</bean>
	
</beans>
